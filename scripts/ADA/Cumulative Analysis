-- Calculate total sales per month
--- running sales of sales over time 

SELECT
order_date,
total_sales,
SUM(total_sales) OVER(PARTITION BY order_date order by order_date) as running_sales,
AVG(avg_price) OVER(PARTITION BY order_date order by order_date) as moving_avergae_price
FROM
(
SELECT 
DATETRUNC(month,order_date) as order_date,
SUM(sales_amount) as total_sales,AVG(price) as avg_price
FROM gold.fact_sales
WHERE order_date is not null
GROUP BY DATETRUNC(month,order_date)
) as t
