--- Products Generate highest revenue
SELECT TOP 5
p.product_name,
sum(f.sales_amount) as [Revenue by Category]
FROM gold.fact_sales as f
LEFT Join gold.dim_products as p
ON p.product_key = f.product_key
GROUP BY p.product_name
order by [Revenue by Category] DESC  

--- Products generate lowest revenue

SELECT TOP 5
p.product_name,
sum(f.sales_amount) as [Revenue by Category]
FROM gold.fact_sales as f
LEFT Join gold.dim_products as p
ON p.product_key = f.product_key
GROUP BY p.product_name
order by [Revenue by Category] aSC
 
